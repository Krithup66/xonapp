        "muted": "rgba(255,255,255,0.5)"
      },
      "accent": {
        "primary": "#3ff9be",
        "secondary": "#C4FF00",
        "success": "#C4FF00",
        "warning": "#FFB800",
        "error": "#FF0505",
        "info": "#007AFF"
      },
      "border": {
        "default": "rgba(255,255,255,0.15)",
        "light": "rgba(255,255,255,0.1)",
        "divider": "rgba(255,255,255,0.05)"
      },
      "button": {
        "primary": "#3ff9be",
